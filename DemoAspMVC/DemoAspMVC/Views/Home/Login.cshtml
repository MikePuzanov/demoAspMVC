@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginAuth

<form asp-action="Login">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary ">Create product</h1>
        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Username" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Home" asp-action="Index" class="btn-primary btn form-control">Back To HomePage</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Login" class="btn btn-success form-control"/>
            </div>
        </div>
        <div></div>
    </div>
</form>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}